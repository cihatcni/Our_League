<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/homeTeamLogoMCV"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/biglogo" />

    <TextView
        android:id="@+id/homeTeamMCV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:text="HOME"
        android:textColor="?attr/primaryFontColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/awayTeamLogoMCV"
        app:layout_constraintStart_toEndOf="@+id/awayTeamLogoMCV"
        app:layout_constraintTop_toTopOf="@+id/awayTeamLogoMCV" />

    <ImageView
        android:id="@+id/versusImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:adjustViewBounds="true"
        android:padding="5dp"
        app:srcCompat="@drawable/vs2" />

    <TextView
        android:id="@+id/awayTeamMCV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:paddingEnd="4dp"
        android:text="AWAY"
        android:textAlignment="textEnd"
        android:textColor="?attr/primaryFontColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/awayTeamLogoMCV"
        app:layout_constraintStart_toEndOf="@+id/awayTeamLogoMCV"
        app:layout_constraintTop_toTopOf="@+id/awayTeamLogoMCV" />

    <ImageView
        android:id="@+id/awayTeamLogoMCV"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/biglogo" />

</LinearLayout>